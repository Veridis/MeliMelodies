{% if 'image' == media.category %}
    {% for widget in media.gallery %}
        <div class="col-xs-4 col-md-2">
            <a href="#" class="thumb-gallery" data-toggle="modal" data-target="#image-preview"
               data-image-id="" data-title="{{ media.title }}" data-caption="{{ loop.index }}/{{ media.gallery|length }}" data-image="{{ asset(widget.path) }}"
               data-id="{{ widget.id }}">
                <div class="nailthumb-container square-thumb img-rounded img-thumbnail">
                    <img src="{{ asset(widget.path) }}" alt="image {{ loop.index }} - {{ media.title }}">
                </div>
            </a>
        </div>
    {% else %}
        <p class="text-center"><em>Aucune media présent dans cette gallerie</em></p>
    {% endfor %}
{% elseif 'audio' == media.category %}
{% elseif 'video' == media.category %}
    {% for code, title in media.videos %}
        <div class="col-md-6">
            <div class="yt-gallery embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ code }}" allowfullscreen></iframe>
            </div>
        </div>
    {% else %}
        <p class="text-center"><em>Aucune media présent dans cette gallerie</em></p>
    {% endfor %}
{% endif %}

{# modal #}
<div class="modal fade" id="image-preview" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                <h4 class="modal-title"  id="image-gallery-title"></h4>
            </div>
            <div class="modal-body">
                <img id="image-gallery-image" class="img-responsive" src="">
            </div>
            <div class="modal-footer">
                <div class="col-xs-2">
                    <button type="button" class="btn btn-primary" id="show-previous-image">⇦</button>
                </div>
                <em class="col-xs-8 text-center" id="image-gallery-caption">

                </em>
                <div class="col-xs-2">
                    <button type="button" id="show-next-image" class="btn btn-primary">⇨</button>
                </div>
            </div>
        </div>
    </div>
</div>
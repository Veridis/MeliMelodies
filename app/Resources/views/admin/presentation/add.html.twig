{% extends 'admin/layout.html.twig' %}

{% block body %}
    <h1>Ajouter un membre</h1>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.role) }}
            {{ form_row(form.description) }}
            {{ form_row(form.photo) }}
            {{ form_row(form.archived) }}
            <input type="submit" value="Ajouter un membre" class="btn btn-primary btn-block pull-right" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

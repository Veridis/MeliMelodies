{% extends 'admin/layout.html.twig' %}

{% block body %}
    <h1>Contacts</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Pseudo</th>
                <th>Sujet</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td><strong>#{{ contact.id }}</strong></td>
                    <td>{{ contact.nickname }}</td>
                    <td>{{ contact.subject }}</td>
                    <td>{{ contact.date|date('d-m-Y') }}</td>
                    <td>
                        <a href="{{ path('admin-contact-show', {'id' : contact.id}) }}" class="btn btn-primary btn-xs" title="Voir le détail"><span class="glyphicon glyphicon-eye-open"></span></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center"><em>Aucun contact à lister</em></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(contacts) }}
    </div>
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Méli-Mélodies{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                'css/bs-meli.min.css'
                'css/font-awesome.min.css'
                'css/nailthumb.1.1.min.css'
                'css/app.css'
                filter='cssrewrite' output='css/compiled/appc.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="content">
            <header id="banner">
                <img class="img-responsive" src="{{ asset('img/banner.png') }}" alt="Méli-Mélodies"/>
            </header>
            {% block menu %}
                {% include 'app/menu.html.twig' %}
            {% endblock %}
            {% include 'app/flash.html.twig' %}
            <div class="container" id="body">
                {% block body %}{% endblock %}
            </div>
            <footer class="row">
                <ul class="list-inline text-center">
                    <li><a href="https://www.facebook.com/Méli-Mélodies-753219008068008/?fref=ts" title="Rejoignez nous sur Facebook" target="_blank"><i class="fa fa-3x fa-facebook-square"></i></a></li>
                    <li><a href="https://www.youtube.com/channel/UCx-TRoQdHQuYcMmeipHlEpA" title="Suivez-nous sur Youtube"><i class="fa fa-3x fa-youtube-square"></i></a></li>
                </ul>
                <hr />
                <ul class="list-inline text-center">
                    <li><a href="{{ path('cgu') }}" title="Conditions Générales d'Utilisation">CGU</a></li>
                    <li>•</li>
                    <li><a href="{{ path('legals') }}" title="Mentions Légales">Mentions Légales</a></li>
                    <li>•</li>
                    <li><a href="{{ path('contact') }}" title="Laissez-nous un mot">Contact</a></li>
                    <li>•</li>
                    <li><a href="{{ path('presentation') }}" title="Decouvrez-en plus sur nous !">Qui sommes-nous ?</a></li>
                </ul>
            </footer>
        </div>
        {% block javascripts %}
            {% javascripts
                'https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js'
                'js/bootstrap.min.js'
                'js/bootstrap-confirmation.min.js'
                'js/nailthumb.1.1.min.js'
                'js/app.js'
                output='js/compiled/appc.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        {{ summernote_init() }}
    </body>
</html>
